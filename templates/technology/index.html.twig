{% extends 'base.html.twig' %}

{% block title %}Technologies{% endblock %}

{% block body %}

    <h1>Technologies</h1>

    <h2>List of used technologies</h2>


    <div class="container archive">
        <div class="row">
            {% for technology in technologies %}
                <div class="col-lg-4 col-md-6 ">
                    <a class="single-block" href="{{ path('technologies_single', { slug: technology.slug }) }}">
                        <div class="container inside-block">
                            <div class="row">
                                <div class="col-2"><img src="/uploads/tech/{{ technology.image }}" alt="{{ technology }}" class="block-image" height=24 width=auto/></div>
                                <div class="col-10"><p class="block-name">{{ technology.name }}</p></div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

